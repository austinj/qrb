---
import { getCollection } from "astro:content";
import Show from "../components/Show.astro";

// Fetch and sort the collection by date in descending order
const allShows = (await getCollection("shows"))
  .filter((show) => show && show.data && show.data.title && show.id) // Filter out invalid or incomplete entries
  .sort((a, b) => {
    const dateA = new Date(a.data.pubDate);
    const dateB = new Date(b.data.pubDate);
    return dateB.getTime() - dateA.getTime(); // Most recent date first
  });

// Get the most recent show and the next three shows
const mostRecentShow = allShows[0];
const nextThreeShows = allShows.slice(1, 4);

// Check if there's a show this week (shows are every other Friday)
const today = new Date();
today.setHours(0, 0, 0, 0);

// Find the Friday of the current week
const dayOfWeek = today.getDay();
const daysUntilFriday = (5 - dayOfWeek + 7) % 7; // 5 = Friday
const thisFriday = new Date(today);
thisFriday.setDate(today.getDate() + daysUntilFriday);
thisFriday.setHours(0, 0, 0, 0);

const isShowThisWeek = mostRecentShow && (() => {
  const lastShowDate = new Date(mostRecentShow.data.pubDate);
  lastShowDate.setHours(0, 0, 0, 0);
  
  // Calculate weeks since last show
  const msPerWeek = 7 * 24 * 60 * 60 * 1000;
  const weeksSinceLastShow = Math.round((thisFriday.getTime() - lastShowDate.getTime()) / msPerWeek);
  
  // Show is every other week (bi-weekly), so check if weeks since last show is even
  return weeksSinceLastShow >= 0 && weeksSinceLastShow % 2 === 0;
})();

const showStatus = isShowThisWeek ? "is" : "is not";
---

<div class="container max-w-3xl mx-auto px-4 md:px-0">
  <p class="md:text-5xl text-4xl">The Quadraphonic Rock Block</p>
  <p>
    is a radio show on <a class="text-black hover:underline" href="https://kucr.org/">KUCR</a>, the campus radio station for the University of California, Riverside. It's music, broadcast every other Friday from 11 am to 12 pm Pacific.<strong> {isShowThisWeek ? "There is a show this Friday!" : "There's no show this week."}</strong></p>
  </p>

  <h2 class="mt-4 md:mt-8 md:text-2xl text-xl font-bold">Most Recent Show</h2>
  <ul class="list-disc md:pl-8 pl-6 space-y-1 md:text-xl text-base">
    <li class="mt-4">
      {mostRecentShow ? (
        <Show 
          url={mostRecentShow.data.spinitron && mostRecentShow.data.spinitron.trim() !== '' ? mostRecentShow.data.spinitron : '#'} 
          title={mostRecentShow.data.title} 
          tags={mostRecentShow.data.tags} 
        />
      ) : (
        <p>No recent shows available.</p>
      )}
    </li>
  </ul>

  <h2 class="mt-4 md:text-2xl text-xl font-bold">Last Few Shows</h2>
  <ul class="list-disc pl-8 space-y-1 md:text-xl text-base">
    {nextThreeShows.map((show) =>
      show && show.data && show.data.title ? (
        <li class="mt-4">
          <Show 
            url={show.data.spinitron && show.data.spinitron.trim() !== '' ? show.data.spinitron : '#'} 
            title={show.data.title} 
            tags={show.data.tags} 
          />
        </li>
      ) : null
    )}
  </ul>
</div>
